            android:layout_marginTop="24dp"
            android:background="@color/light_transparent"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view1"
