<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_category">

    <fragment
        android:id="@+id/nav_category"
        android:name="my.diploma.thursdaystore.drawer.category.CategoryFragment"
        android:label="@string/menu_category"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_nav_category_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="my.diploma.thursdaystore.drawer.favorites.FavoritesFragment"
        android:label="@string/menu_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_nav_favorites_to_productInfoFragment"
            app:destination="@id/productInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_basket"
        android:name="my.diploma.thursdaystore.drawer.basket.BasketFragment"
        android:label="@string/menu_basket"
        tools:layout="@layout/fragment_basket" >
        <action
            android:id="@+id/action_nav_basket_to_productInfoFragment"
            app:destination="@id/productInfoFragment" />
        <action
            android:id="@+id/action_nav_basket_to_makePurchaseFragment"
            app:destination="@id/makePurchaseFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_purchases"
        android:name="my.diploma.thursdaystore.drawer.purchases.PurchasesFragment"
        android:label="@string/menu_purchases"
        tools:layout="@layout/fragment_purchases" />

    <fragment
        android:id="@+id/nav_personal"
        android:name="my.diploma.thursdaystore.drawer.personal.PersonalFragment"
        android:label="@string/menu_personal"
        tools:layout="@layout/fragment_person" >
        <action
            android:id="@+id/action_nav_personal_to_personChangeFragment"
            app:destination="@id/personChangeFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_company"
        android:name="my.diploma.thursdaystore.drawer.company.AboutCompanyFragment"
        android:label="@string/menu_company"
        tools:layout="@layout/fragment_company" />

    <fragment
        android:id="@+id/nav_feedback"
        android:name="my.diploma.thursdaystore.drawer.feedback.FeedbackFragment"
        android:label="@string/menu_feedback"
        tools:layout="@layout/fragment_feedback" />

    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="my.diploma.thursdaystore.fragments.sub_category.SubCategoryFragment"
        tools:layout="@layout/fragment_sub_category">
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_subCategoryFragment_to_productsFragment"
            app:destination="@id/productsFragment"/>
        <argument
            android:name="categoryId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="my.diploma.thursdaystore.fragments.products.ProductsFragment"
        tools:layout="@layout/fragment_products">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="subcategoryId"
            app:argType="long" />
        <action
            android:id="@+id/action_productsFragment_to_filterFragment"
            app:destination="@id/filterFragment"
            app:popUpTo="@id/filterFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="filterRequest"
            app:argType="my.diploma.thursdaystore.retrofit.dto.filter.request.ApplyFilterItemRequest"
            app:nullable="true"/>
        <action
            android:id="@+id/action_productsFragment_to_productInfoFragment"
            app:destination="@id/productInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="my.diploma.thursdaystore.fragments.filter.FilterFragment"
        android:label="filter_fragment"
        tools:layout="@layout/fragment_filter">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="subcategoryId"
            app:argType="long" />
        <action
            android:id="@+id/action_filterFragment_to_productsFragment"
            app:destination="@id/productsFragment"
            app:popUpTo="@id/productsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="filterRequest"
            app:argType="my.diploma.thursdaystore.retrofit.dto.filter.request.ApplyFilterItemRequest"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/personChangeFragment"
        android:name="my.diploma.thursdaystore.fragments.person_change.PersonChangeFragment"
        android:label="PersonChangeFragment" />
    <fragment
        android:id="@+id/productInfoFragment"
        android:name="my.diploma.thursdaystore.fragments.product_tree.ProductInfoFragment"
        android:label="ProductInfoFragment" >
        <argument
            android:name="productId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/makePurchaseFragment"
        android:name="my.diploma.thursdaystore.fragments.make_purchase.MakePurchaseFragment"
        android:label="make_purchase_fragment"
        tools:layout="@layout/make_purchase_fragment" />

</navigation>